{
  "compilerOptions": {
    "module": "ESNext", // ⬅️ Emit ES modules (not CommonJS)
    "target": "ES2020", // ⬅️ Modern JS output
    "moduleResolution": "Node", // ⬅️ Resolve node-style imports
    "allowJs": true,
    "esModuleInterop": true, // ⬅️ Allow default imports from CommonJS
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.js"
  ]
}